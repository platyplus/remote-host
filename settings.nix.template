{
  # Add any additional required modules
  imports = [
    ./hardware-configuration.nix
    ./reverse-tunnel.nix
    ./users/platyplus.nix
  ];

  hostname = "{{hostname}}";

  # grub.device = "/dev/disk/by-<id|path>/<label>";
  grub.device = "/dev/disk/by-id/{{device}}";

  networkmanager.enable = true;
 
  # Timezone of the location where the server will be deployed
  timezone = "{{timezone}}";
 
  reverse_tunnel_forward_port = "{{tunnelport}}";

}

